{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Uniface",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#constants"
        }
    ],
    "repository": {
        "code": {
            "patterns": [
                {
                    "include": "#keywords"
                },
                {
                    "include": "#strings"
                },
                {
                    "include": "#comments"
                },
                {
                    "include": "#constants"
                },
                {
                    "include": "#globals"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.uniface",
                    "match": "(?i)\\b(activate|addmonths|apexit|apstart|askmess|blockdata|break|call|callfieldtrigger|case|catch|clear|close|clrmess|colorbox|commit|compare|componentToStruct|creocc|curoccvideo|debug|delete|deleteinstance|delitem|deletesetting|dircreate|dirdelete|dirrename|discard|display|displaylength|done|edit|eject|else|elsecase|elseif|end|endfor|endif|endtry|endjavascript|endparams|endscope|endselectcase|endvariables|endwhile|entitycopy|entry|erase|exit|fieldsyntax|fieldvideo|filebox|filecopy|filedelete|filedump|fileload|filemove|filerename|finally|findkey|flush|for|forentity|forlist|forlist /id|getitem|getlistitems|goto|help|if|jsonToStruct|javascript|ldircreate|ldirdelete|ldirrename|length|lfilecopy|lfiledelete|lfiledump|lfileload|lfilemove|lfilerename|lflush|lock|lookup|lowercase|macro|message|moveocc|newinstance|nodebug|numgen|numset|open|operation|params|postmessage|proccompile|partner|print|printbreak|public|pulldown|putitem|putlistitems|putmess|read|reconnect|refresh|release|reload|remocc|repeat|reset|rethrow|retrieve|retrieve/a|retrieve/o|retrieve/reconnect|retrieve/x|return|returns|rollback|run|scan|scope|selectcase|selectdb|set|setocc|setformfocus|show|skip|sleep|soap|sort|sort/list|spawn|sql|store|stripattributes|structToComponent|structToJson|structToXml|structToXml/schema|throw|throw/list|throws|triggerâ€¦end|try|u_condition|undeclare|until|uppercase|u_where|validate|validatefield|validatekey|validateocc|variables|web|webactivate|webgen|webget|webdefinitions|weblayout|webload|webmessage|weboperation|websave|websetocc|webtrigger|while|write|xmlload|xmlsave|xmlvalidate|xmlToStruct)\\b"
                },
                {
                    "name": "keyword.operator.uniface",
                    "match": "(?i)(\\$)[a-z_A-Z0-9]*"
                },
                {
                    "name": "keyword.operator.uniface",
                    "match": "(#)\\b(include)\\b"
                },
                {
                    "name": "keyword.type.uniface",
                    "match": "(?i)\\b(any|boolean|date|datetime|entity|float|handle|image|lineardate|lineardatetime|lineartime|numeric|occurrence|raw|string|struct|time|xmlstream)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.uniface",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "begin": "\"",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.uniface"
                        }
                    },
                    "end": "\"",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.uniface"
                        }
                    }
                },
                {
                    "begin": "'",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.uniface"
                        }
                    },
                    "end": "'",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.uniface"
                        }
                    },
                    "name": "string.quoted.single.uniface"
                },
                {
                    "match": "%%\"",
                    "name": "constant.character.escape.uniface"
                },
                {
                    "match": "%%",
                    "name": "constant.character.escape.uniface"
                },
                {
                    "match": "%%%",
                    "name": "constant.character.escape.uniface"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "begin": ";",
                    "end": "\\n",
                    "name": "comment.line.character.uniface"
                }
            ]
        },
        "constants": {
            "match": "(?i)(\\<)[a-z_A-Z0-9](\\>)",
            "name": "constant.character.uniface"
        },
        "globals": {
            "match": "(?i)(\\$)[a-z_A-Z0-9](\\$)",
            "name": "globals.character.uniface"
        }
    },
    "scopeName": "source.uniface"
}
